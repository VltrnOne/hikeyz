# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_QUICK_PRICE_ID=price_quick_download_id
STRIPE_PRO_PRICE_ID=price_pro_access_id

# Application Settings
APP_ENV=development
APP_SECRET_KEY=your_random_secret_key_here
APP_BASE_URL=https://hitbot.agency

# Database Configuration (for production)
DATABASE_URL=mysql://user:password@localhost/suno_downloader
REDIS_URL=redis://localhost:6379/0

# Google AdSense
ADSENSE_CLIENT_ID=ca-pub-your_adsense_id
ADSENSE_SLOT_ID=your_ad_slot_id

# Server Configuration
PORT=5000
WORKERS=4

# Chrome Debugging (for download automation)
CHROME_DEBUG_PORT=9222

# File Storage
DOWNLOAD_DIR=/var/www/hitbot-agency/downloads
MAX_STORAGE_DAYS=7

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Rate Limiting
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_RATE_LIMIT=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/suno-downloader/app.log
